@page
@model Projet_AdoNet.Pages.Clients.EditModel

@{
    ViewData["Title"] = "Modifier les informations du Client";
}

<br />

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<br />

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.idClient" />
            <div class="form-group">
                <label asp-for="Client.nomClient" class="control-label"></label>
                <input asp-for="Client.nomClient" class="form-control" />
                <span asp-validation-for="Client.nomClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.prenomClient" class="control-label"></label>
                <input asp-for="Client.prenomClient" class="form-control" />
                <span asp-validation-for="Client.prenomClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

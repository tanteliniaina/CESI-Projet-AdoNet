@page
@model Projet_AdoNet.Pages.Managers.EditModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Modification de l'information du Manager";
}

@*Test de redirection*@
@if (HttpContext.Session.GetString("login") == null)
{
    <script src="~/js/Redirect.js"></script>
}



<br />

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<br />

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Manager.Id" />
            <div class="form-group">
                <label asp-for="Manager.Nom" class="control-label"></label>
                <input asp-for="Manager.Nom" class="form-control" />
                <span asp-validation-for="Manager.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.Prenom" class="control-label"></label>
                <input asp-for="Manager.Prenom" class="form-control" />
                <span asp-validation-for="Manager.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.Login" class="control-label"></label>
                <input asp-for="Manager.Login" class="form-control" />
                <span asp-validation-for="Manager.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.Password" class="control-label"></label>
                <input asp-for="Manager.Password" class="form-control" />
                <span asp-validation-for="Manager.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model Projet_AdoNet.Pages.Operations.IndexModel
@{
    ViewData["Title"] = "Test";
}

<h1>@ViewData["Title"]</h1>
<h2>@Model.dt_ct.Rows.Count</h2>


<br />

<table class="table table-striped table caption-top">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
        </tr>
    </thead>
    <tbody>
        @for (int x = 0; x < Model.dt_ct.Rows.Count; x++)
        {
            <tr>
                <th scope="row">@Model.dt_ct.Rows[x][0]</th>
                <td>@Model.dt_ct.Rows[x][1]</td>
                <td>@Model.dt_ct.Rows[x][2]</td>
            </tr>
         }
        </tbody>
    </table>
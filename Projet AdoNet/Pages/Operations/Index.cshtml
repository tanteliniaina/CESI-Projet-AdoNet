@page
@model Projet_AdoNet.Pages.Operations.IndexModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Intelligence de l'entreprise [B.I]";
}

@*Test de redirection*@
@if (HttpContext.Session.GetString("login") == null)
{
    <script src="~/js/Redirect.js"></script>
}

<script src="~/js/Filter.js"></script>

<br />


<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<br />
<hr />
<br />


<div class="row">
    <div class="col-sm">
        <h4>La liste des opérations que vous pouvez effectuer :</h4>
        <br />
        <!--Declencheur Menu-->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="Commerciaux-tab" data-toggle="tab" href="#Commerciaux" role="tab" aria-controls="Commerciaux" aria-selected="true">Commerciaux</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="Clients-tab" data-toggle="tab" href="#Clients" role="tab" aria-controls="Clients" aria-selected="false">Clients</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="Projets-tab" data-toggle="tab" href="#Projets" role="tab" aria-controls="Projets" aria-selected="false">Projets</a>
            </li>
        </ul>

        <!--Conteneur Menu-->
        <div class="tab-content" id="myTabContent">

            <br />
            <p>Veuillez Choisir la filtrer/le regroupage qui vous convient :</p>
            <br />

            <!--Partie Commerciaux-->
            <div class="tab-pane fade show active" id="Commerciaux" role="tabpanel" aria-labelledby="Commerciaux-tab">
                <!--début de groupe de bouton-->
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <!--premier bouton-->
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <a class="btn btn-secondary" data-toggle="collapse" href="#Filtre" role="button" aria-expanded="false" aria-controls="collapseExample">
                            Comparer
                        </a>
                    </div>
                    <!--deuxième bouton-->
                    <div class="btn-group mr-2" role="group" aria-label="Second group">
                        <a class="btn btn-secondary" asp-page="/Operations/Index">
                            Afficher tous
                        </a>
                    </div>
                    <!--troisieme bouton-->
                    <div class="btn-group" role="group" aria-label="Third group">
                        <a class="btn btn-secondary" asp-page="/Operations/TopDixCommerciaux">
                            Top 6
                        </a>
                    </div>
                </div>
                <!--fin de groupe de bouton-->
                <!--collapse pour les filtre-->
                <div class="collapse" id="Filtre">
                    <div class="card card-body" style="background-color:transparent; border-color:transparent;">
                        <br />
                        <!--Début du menu Commerciaux-->
                        <div class="card border-secondary mb-3" style="max-width: 28rem;">
                            <div class="card-body text-secondary">
                                <h5 class="card-title">Selectionner 2 à 5 personnes</h5>
                                <!--début de filtre-->
                                <!--collapse pour les filtres de comparaison-->
                                <form method="post" asp-page="Index">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text" for="Comm1" style="background-color:rgba(255, 99, 132 ,0.2);">Commercial N° 1</label>
                                        </div>
                                        <select class="custom-select" name="id11" id="Comm1" onchange="comm1Treatment()">
                                            <option value="1996456789">-Choisir-</option>
                                            @foreach (var item in Model.ProjetPC)
                                            {
                                                <option value="@item.Id">@Html.DisplayFor(Model => item.Prenom) @Html.DisplayFor(Model => item.Nom)</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text" for="Comm2" style="background-color:rgba(54, 162, 235, 0.2);">Commercial N° 2</label>
                                        </div>
                                        <select class="custom-select" name="id22" id="Comm2" onchange="comm2Treatment()">
                                            <option value="1996456789">-Choisir-</option>
                                            @foreach (var item in Model.ProjetPC)
                                            {
                                                <option value="@item.Id">@Html.DisplayFor(Model => item.Prenom) @Html.DisplayFor(Model => item.Nom)</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text" for="Comm3" style="background-color:rgba(255, 206, 86, 0.2);">Commercial N° 3</label>
                                        </div>
                                        <select class="custom-select" name="id33" id="Comm3" onchange="comm3Treatment()">
                                            <option value="1996456789">-Choisir-</option>
                                            @foreach (var item in Model.ProjetPC)
                                            {
                                                <option value="@item.Id">@Html.DisplayFor(Model => item.Prenom) @Html.DisplayFor(Model => item.Nom)</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text" for="Comm4" style="background-color:rgba(75, 192, 192, 0.2);">Commercial N° 4</label>
                                        </div>
                                        <select class="custom-select" name="id44" id="Comm4" onchange="comm4Treatment()">
                                            <option value="1996456789">-Choisir-</option>
                                            @foreach (var item in Model.ProjetPC)
                                            {
                                                <option value="@item.Id">@Html.DisplayFor(Model => item.Prenom) @Html.DisplayFor(Model => item.Nom)</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text" for="Comm5" style="background-color:rgba(153, 102, 255, 0.2);">Commercial N° 5</label>
                                        </div>
                                        <select class="custom-select" name="id55" id="Comm5" onchange="comm5Treatment()">
                                            <option value="1996456789">-Choisir-</option>
                                            @foreach (var item in Model.ProjetPC)
                                            {
                                                <option value="@item.Id">@Html.DisplayFor(Model => item.Prenom) @Html.DisplayFor(Model => item.Nom)</option>
                                            }
                                        </select>
                                    </div>
                                    <br />

                                    <a class="btn btn-outline-light" href="#" style="color:blueviolet;border-color:blueviolet;" role="button" id="applyFilter" onclick="Sent()">Appliquer filtre</a>
                                </form>
                                <!--fin de filtre-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--Fin du menu Commerciaux-->
            </div>



            <!--Partie Client-->

            <div class="tab-pane fade" id="Clients" role="tabpanel" aria-labelledby="Clients-tab">
                <!--début de groupe de bouton-->
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <!--premier bouton-->
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <a class="btn btn-secondary" asp-area="" asp-page="/Operations/ListeDesClients">
                            Afficher tous
                        </a>
                    </div>
                    <!--deuxième bouton-->
                    <div class="btn-group mr-2" role="group" aria-label="Second group">
                        <a class="btn btn-secondary" asp-area="" asp-page="/Operations/TopDixClients">
                            Top 6
                        </a>
                    </div>
                    <!--troisieme bouton-->
                    <div class="btn-group" role="group" aria-label="Third group">

                    </div>
                </div>
                <!--fin de groupe de bouton-->
            </div>

            <!--Partie Projet-->
            
            <div class="tab-pane fade" id="Projets" role="tabpanel" aria-labelledby="Projets-tab">
                <!--début de groupe de bouton-->
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <!--premier bouton-->
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <a class="btn btn-secondary" asp-area="" asp-page="/Operations/ListeDesProjets">
                            Afficher tous
                        </a>
                    </div>
                    <!--premier bouton-->
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <a class="btn btn-secondary" data-toggle="collapse" href="#Filtre1" role="button" aria-expanded="false" aria-controls="collapseExample1">
                            Par Date
                        </a>
                    </div>
                    <!--troisieme bouton-->
                    <div class="btn-group" role="group" aria-label="Third group">
                        <a class="btn btn-secondary" asp-area="" asp-page="/Operations/FiltreProjetParVille">
                            Par ville
                        </a>
                    </div>
                </div>
                <!--fin de groupe de bouton-->
                <!--collapse pour les filtre-->
                <div class="collapse" id="Filtre1">
                    <div class="card card-body" style="background-color:transparent; border-color:transparent;">
                        <br />
                        <!--Début du menu Commerciaux-->
                        <div class="card border-secondary mb-3" style="max-width: 28rem;">
                            <div class="card-body text-secondary">
                                <h5 class="card-title">Si vide, la fourchette est la suivante [Début de l'année - Aujourd'hui]</h5>
                                <!--début de filtre-->
                                <!--collapse pour les filtres de comparaison-->
                                <form>
                                    <div class="form-group">
                                        <label for="dateDebut">Choisir une date de début :</label>
                                        <input type="date" class="form-control" id="dateDebut" onchange="getDateDeb()" required>
                                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="dateFin">Choisir une date de fin :</label>
                                        <input type="date" class="form-control" id="dateFin" onchange="getDateFin()" required>
                                    </div>
                                    <br />
                                    <a class="btn btn-outline-light" href="#" style="color:blueviolet;border-color:blueviolet;" role="button" id="applyFilter" onclick="Sent1()">Appliquer filtre</a>
                                </form>
                                <!--fin de filtre-->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-sm">
        <h4>Ci-dessous la liste de tous les commerciaux :</h4>
        <br />
        <table class="table table-striped table caption-top">
            <thead>
                <tr>
                    <th scope="col">Ref. Comm</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Nombre de projet</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProjetPC)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(Model => item.Id)</th>
                        <th>@Html.DisplayFor(Model => item.Nom)</th>
                        <td>@Html.DisplayFor(Model => item.Prenom)</td>
                        <td>@Html.DisplayFor(Model => item.NombreProjet)</td>
                        <td><a asp-page="./ListeProjetParCommercial" asp-route-id="@item.Id" asp-route-id1="2" asp-route-id3="2">Afficher projet</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




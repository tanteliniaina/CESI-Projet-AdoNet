@page
@model Projet_AdoNet.Pages.Projets.IndexModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Gestion de Projets";
}

@*Test de redirection*@
@if (HttpContext.Session.GetString("login") == null)
{
    <script src="~/js/Redirect.js"></script>
}


<br />

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<br />

<p>
    <a asp-page="Create" class="btn btn-primary btn-lg" role="button">Créer un Projet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projet[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projet[0].DateCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projet[0].DateFinalisation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projet[0].Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projet[0].IdStatut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projet[0].IdCommercial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projet[0].IdClient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Projet)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFinalisation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ville)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdStatut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCommercial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClient)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Modifier</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
